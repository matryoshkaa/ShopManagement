<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_marginTop="9dp"
        android:layout_marginLeft="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/unitPriceLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center"
                android:layout_marginLeft="4dp"
                android:fontFamily="@font/montserrat"
                android:padding="3dp"
                android:text="Unit Price"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/unitPriceValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center"
                android:layout_marginLeft="4dp"
                android:fontFamily="@font/montserrat"
                android:padding="3dp"
                android:text="AED 0.0"
                android:textSize="16dp" />

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/taxLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center"
                android:layout_marginLeft="4dp"
                android:fontFamily="@font/montserrat"
                android:padding="3dp"
                android:text="Tax amount"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/taxValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center"
                android:layout_marginLeft="4dp"
                android:fontFamily="@font/montserrat"
                android:padding="3dp"
                android:text="AED 0.0"
                android:textSize="16dp" />



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/shippingPriceLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center"
                android:layout_marginLeft="4dp"
                android:fontFamily="@font/montserrat"
                android:padding="3dp"
                android:textColor="#8560a8"
                android:text="Shipping: "
                android:textSize="17sp" />


            <TextView
                android:id="@+id/shippingPriceValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:textColor="#8560a8"
                android:text="AED 0.0"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/amountAvailableHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center"
                android:layout_marginLeft="4dp"
                android:fontFamily="@font/montserrat"
                android:padding="3dp"
                android:textColor="#8560a8"
                android:text="Amount in Stock"
                android:textSize="17dp" />


            <TextView
                android:id="@+id/amountAvailableValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:textColor="#8560a8"
                android:text="-"
                android:textSize="16dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:paddingTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/amountHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center"
                android:layout_marginStart="4dp"
                android:fontFamily="@font/montserrat"
                android:padding="3dp"
                android:text="@string/product_amount"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/amountValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:gravity="center"
                android:layout_marginBottom="3dp"
                android:textColor="#000"
                android:hint="@string/_5_pieces"
                android:textSize="15sp"
                android:autofillHints=""
                android:inputType="number" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/calculateCostButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/round_grey_rect"
                app:backgroundTint="#CDCDCD"
                android:fontFamily="@font/montserrat"
                android:padding="8dp"
                android:text="Calculate Inital Cost Price"
                android:textColor="#000000"
                android:textSize="12sp" />

<!--            <Button-->
<!--                android:id="@+id/addToStock"-->
<!--                android:layout_marginTop="10dp"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_gravity="center"-->
<!--                android:background="@drawable/round_grey_rect"-->
<!--                android:fontFamily="@font/montserrat"-->
<!--                app:backgroundTint="#CDCDCD"-->
<!--                android:padding="8dp"-->
<!--                android:text="Add to Stock"-->
<!--                android:textColor="#000000"-->
<!--                android:textSize="12dp" />-->
            <TextView
                android:id="@+id/totalCostView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center"
                android:layout_marginStart="4dp"
                android:fontFamily="@font/montserrat"
                android:padding="3dp"
                android:layout_marginTop="10dp"
                android:text="Total: AED"
                android:textSize="16sp" />

        </LinearLayout>



    </LinearLayout>
</RelativeLayout>