<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/promoPriceHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center"
                android:layout_marginLeft="4dp"
                android:fontFamily="@font/montserrat"
                android:padding="3dp"
                android:textColor="#8560a8"
                android:text="Final Selling Price with VAT: "
                android:textSize="17dp" />

            <TextView
                android:id="@+id/vatSellingPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:textColor="#8560a8"
                android:text="0.0"
                android:textSize="17dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="25dp"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#8560a8"
                android:fontFamily="@font/montserrat"
                android:layout_marginLeft="6dp"
                android:textSize="17dp"
                android:text="Quantity"/>

            <ImageButton
                android:id="@+id/subtractProdAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:padding="2dp"
                android:scaleType="centerInside"
                android:background="@drawable/subtract_vector"
                tools:ignore="VectorDrawableCompat"
                android:contentDescription="@string/todo" />

            <TextView
                android:id="@+id/prodAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:textSize="17dp"
                android:text="0"/>

            <ImageButton
                android:id="@+id/addProdAmount"
                android:layout_marginLeft="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:scaleType="centerInside"
                android:background="@drawable/tax_vector"
                tools:ignore="VectorDrawableCompat"
                android:contentDescription="@string/todo" />

            <TextView
                android:id="@+id/prodAmountTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:textColor="#8560a8"
                android:textSize="17dp" />
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/addForSaleButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/round_grey_rect"
            app:backgroundTint="#CDCDCD"
            android:fontFamily="@font/montserrat"
            android:padding="8dp"
            android:text="add for sale"
            android:textColor="#000000"
            android:textSize="12dp"/>

    </LinearLayout>



</LinearLayout>
</RelativeLayout>