<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_marginTop="9dp"
        android:layout_marginLeft="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/setProductBenefit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center"
                    android:layout_marginLeft="4dp"
                    android:fontFamily="@font/montserrat"
                    android:padding="3dp"
                    android:text="@string/amount_of_benefit"
                    android:textSize="16dp" />


                <EditText
                    android:id="@+id/productBenefit"
                    android:layout_width="51dp"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat"
                    android:gravity="center"
                    android:layout_marginBottom="3dp"
                    android:textColor="#000"
                    android:textSize="15dp"
                    android:autofillHints=""
                    android:inputType="number" />

            </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/sellingPriceHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:fontFamily="@font/montserrat"
            android:padding="3dp"
            android:text="@string/selling_price_per_unit_aed"
            android:textColor="#8560a8"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/sellingPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:textColor="#8560a8"
            android:textSize="17dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/setDiscount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:layout_marginLeft="4dp"
            android:fontFamily="@font/montserrat"
            android:padding="3dp"
            android:text="@string/set_discount"
            android:textSize="16dp" />


        <EditText
            android:id="@+id/productDiscount"
            android:layout_width="51dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:gravity="center"
            android:layout_marginBottom="3dp"
            android:textColor="#000"
            android:textSize="15dp"
            android:autofillHints=""
            android:inputType="number" />
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/promoPriceHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center"
                android:layout_marginLeft="4dp"
                android:fontFamily="@font/montserrat"
                android:padding="3dp"
                android:textColor="#8560a8"
                android:text="Promotional Selling Price: "
                android:textSize="17dp" />


            <TextView
                android:id="@+id/promoSellingPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:textColor="#8560a8"
                android:textSize="17dp" />
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:paddingTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/promoProfitHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:layout_marginLeft="4dp"
            android:fontFamily="@font/montserrat"
            android:padding="3dp"
            android:text="Promotional Profit(%):"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/promoProfit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:textColor="#fb0000"
            android:textSize="16dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/calculateButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/round_grey_rect"
            android:fontFamily="@font/montserrat"
            android:padding="10dp"
            android:text="@string/calculate_selling_price"
            android:textColor="#000000"
            android:textSize="15dp" />

    </LinearLayout>



</LinearLayout>
</RelativeLayout>