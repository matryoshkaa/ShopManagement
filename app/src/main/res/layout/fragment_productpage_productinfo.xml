<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto">

<LinearLayout
    android:layout_marginTop="9dp"
    android:layout_marginLeft="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <ImageView
            android:id="@+id/unitVector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="4dp"
            android:layout_weight="0.02"
            android:padding="2dp"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/unit_price"
            tools:ignore="VectorDrawableCompat"
            android:contentDescription="@string/todo" />


        <TextView
            android:id="@+id/priceHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="3dp"
            android:fontFamily="@font/montserrat"
            android:text="@string/unit_price_aed"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/unitPriceValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="3dp"
            android:fontFamily="@font/montserrat"
            android:textSize="16dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <ImageView
            android:id="@+id/taxVector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="4dp"
            android:layout_weight="0.02"
            android:padding="2dp"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/tax_vector"
            tools:ignore="VectorDrawableCompat"
            android:contentDescription="@string/todo" />

        <TextView
            android:id="@+id/taxHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="3dp"
            android:fontFamily="@font/montserrat"
            android:text="@string/product_tax_aed"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/taxValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="3dp"
            android:fontFamily="@font/montserrat"
            android:textSize="16dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <ImageView
            android:id="@+id/storageVector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="4dp"
            android:layout_weight="0.02"
            android:padding="2dp"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/shipping_vector"
            tools:ignore="VectorDrawableCompat"
            android:contentDescription="@string/todo" />


        <TextView
            android:id="@+id/shippingPriceHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="3dp"
            android:fontFamily="@font/montserrat"
            android:text="@string/shipping_price_aed"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/shippingPriceValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="3dp"
            android:fontFamily="@font/montserrat"
            android:textSize="16dp" />

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/totalCostPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:padding="3dp"
                android:text="Initial Cost Price: AED"
                android:textColor="#8560a8"
                android:textSize="18dp" />


            <TextView
                android:id="@+id/costPriceValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:textColor="#8560a8"
                android:textSize="18dp" />

        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/amountHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:padding="3dp"
                android:text="Amount available to buy"
                android:textColor="#8560a8"
                android:textSize="18dp" />


            <TextView
                android:id="@+id/amountValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:textColor="#8560a8"
                android:textSize="18dp" />

        </LinearLayout>



    </LinearLayout>



</LinearLayout>
</RelativeLayout>